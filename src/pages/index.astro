---
import BaseLayout from '../layouts/BaseLayout.astro';
// Homeページに表示するセクション部品をすべてインポートします
import WorksSection from '../components/WorksSection.astro';
import AboutSection from '../components/AboutSection.astro';
import PricingSection from '../components/PricingSection.astro'; 
import ContactSection from '../components/ContactSection.astro';
---
<BaseLayout
  title="My Portfolio | Home"
  description="こむぎのポートフォリオサイトへようこそ。シナリオライターとしての実績を掲載しています。"
>
  {/* Worksセクションを「ダイジェスト版」として呼び出します */}
  <WorksSection mode="summary" /> 
  
  {/* Aboutセクションを呼び出します */}
  <AboutSection />
  <PricingSection />
  <ContactSection />
  
</BaseLayout>